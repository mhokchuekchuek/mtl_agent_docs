        A --> |Tool calls| TL[Tools]
        TL --> A
        A --> END[End]
    end

    classDef translate fill:#fef3c7,stroke:#f59e0b,stroke-width:2px,color:#b45309
    classDef agent fill:#cffafe,stroke:#06b6d4,stroke-width:2px,color:#0e7490
    classDef tool fill:#d1fae5,stroke:#10b981,stroke-width:2px,color:#065f46
    classDef endpoint fill:#f3f4f6,stroke:#6b7280,stroke-width:2px,color:#374151

    class T translate
    class A agent
    class TL tool
    class END endpoint
